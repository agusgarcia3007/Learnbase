{
  "name": "learnbase",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "dev:client": "bun run --filter client dev",
    "dev:server": "bun run --filter server dev",
    "build:client": "bun run --filter client build",
    "build:server": "bun run --filter server build",
    "prepare": "husky",
    "changelog": "git-cliff -o CHANGELOG.md",
    "changelog:latest": "git-cliff --unreleased --strip header"
  },
  "packageManager": "bun@1.3.2",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "git-cliff": "^2.11.0",
    "husky": "^9.1.7"
  }
}
